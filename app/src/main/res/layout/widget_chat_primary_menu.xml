<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="144pt"
    android:background="@color/bg_input"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_type"
            android:layout_width="80pt"
            android:layout_height="80pt"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="24pt"
            android:layout_marginStart="24pt"
            android:background="@drawable/bg_input_record"
            android:button="@null" />

        <View
            android:layout_width="1pt"
            android:layout_height="match_parent"
            android:background="@color/line_gray" />

        <Button
            android:id="@id/btn_record"
            android:layout_width="695pt"
            android:layout_height="106pt"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24pt"
            android:background="@drawable/bg_eidt_message"
            android:paddingEnd="24pt"
            android:paddingStart="24pt"
            android:text="@string/send"
            android:visibility="gone"/>

        <EditText
            android:id="@id/edt_msg"
            android:layout_width="695pt"
            android:layout_height="106pt"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24pt"
            android:background="@drawable/bg_eidt_message"
            android:hint="@string/inputMessage"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:paddingEnd="24pt"
            android:paddingStart="24pt"
            android:textSize="43pt" />

        <CheckBox
            android:id="@+id/cb_face"
            android:layout_width="80pt"
            android:layout_height="80pt"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20pt"
            android:background="@drawable/bg_face_input"
            android:button="@null" />


        <CheckBox
            android:id="@+id/cb_add"
            android:layout_width="80pt"
            android:layout_height="80pt"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30pt"
            android:button="@null"
            android:background="@mipmap/icon_input_add" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="100pt"
            android:layout_height="80pt"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15pt"
            android:background="@drawable/bg_chat_send_btn"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="#666666"
            android:textSize="35pt"
            android:visibility="gone" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="@color/line_gray" />
</LinearLayout>