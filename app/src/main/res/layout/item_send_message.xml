<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14pt">

    <com.zhangye.im.widget.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="138pt"
        android:layout_height="138pt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25pt"
        android:scaleType="fitXY"
        android:src="@mipmap/rt_head" />

    <TextView
        android:id="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18pt"
        android:layout_marginTop="55pt"
        android:layout_toStartOf="@id/iv_avatar"
        android:text="@string/send"
        android:textSize="31pt" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18pt"
        android:layout_marginStart="172pt"
        android:layout_marginTop="108pt"
        android:layout_toStartOf="@id/iv_avatar"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/iv_faild"
            android:layout_width="58pt"
            android:layout_height="58pt"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="22pt"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_send_faild" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_left_qp"
            android:gravity="center"
            android:padding="34pt">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:textColor="#ff000000"
                android:textSize="43pt" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>