<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40pt"
        android:text="@string/send"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:textSize="31pt"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14pt"
        android:paddingBottom="40pt"
        android:paddingTop="40pt"
        android:layout_below="@id/tv_name">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="126pt"
            android:layout_height="126pt"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25pt"
            android:scaleType="fitXY"
            android:src="@mipmap/rt_head" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18pt"
            android:layout_marginStart="136pt"
            android:layout_toStartOf="@id/iv_avatar"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/iv_faild"
                android:layout_width="58pt"
                android:layout_height="58pt"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="22pt"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_send_faild" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_chat_me"
                android:paddingBottom="34pt"
                android:paddingEnd="50pt"
                android:paddingStart="35pt"
                android:paddingTop="34pt">

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#ff000000"
                    android:textSize="45pt" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
