<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_chat_top">

    <com.zhangye.im.widget.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="138pt"
        android:layout_height="138pt"
        android:layout_marginStart="25pt"
        android:scaleType="fitXY"
        android:src="@mipmap/rt_head" />

    <TextView
        android:id="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18pt"
        android:layout_marginTop="55pt"
        android:layout_toEndOf="@id/iv_avatar"
        android:textSize="31pt" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="230pt"
        android:layout_marginStart="18pt"
        android:layout_marginTop="108pt"
        android:layout_toEndOf="@id/iv_avatar"
        android:background="@drawable/chat_right_qp"
        android:gravity="center"
        android:padding="35pt">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:textColor="#ff000000"
            android:textSize="43pt" />
    </RelativeLayout>

</RelativeLayout>
